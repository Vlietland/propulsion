{
  "name": "propulsionweb",
  "version": "1.0.0",
  "description": "A web-based game built with Excalibur.js",
  "main": "src/main.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "lint": "eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@excaliburjs/plugin-tiled": "github:excaliburjs/excalibur-tiled",
    "excalibur": "^0.30.3",
    "planck-js": "^1.3.0"
  },
  "devDependencies": {
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "vite-plugin-tsconfig-paths": "^1.4.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}